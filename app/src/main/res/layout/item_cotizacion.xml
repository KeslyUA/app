<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/item_cotizacion">

    <RelativeLayout
        android:background="@drawable/btnregistrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginBottom="5dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <!-- Titulo -->

        <!-- CategorÃ­a -->

        <!-- Fecha -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_solicitud" />

        <TextView
            android:id="@+id/estado_solicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoria"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="20dp"
            android:text="En Proceso"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/numero_solicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:text="Solicitud N0012"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

        <!-- Prioridad -->

        <!-- Icono para la fecha -->

        <TextView
            android:id="@+id/motivo_solicitudd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:text="Visita Cerro de Pasco"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/fecha_inicio_solicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-1dp"
            android:text="2022-45-87"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/fecha_fin_solicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xp"
            android:layout_marginStart="126dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/fecha_inicio_solicitud"
            android:text="2022-45-87"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic" />



        <LinearLayout
            android:id="@+id/xp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/motivo_solicitudd"
            android:layout_alignParentStart="true"
            >
            <TextView
                android:id="@+id/lugar_inicio"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/motivo_solicitudd"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:text="Los Olivos"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/flecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/motivo_solicitudd"
                android:layout_marginStart="-1dp"
                android:layout_toEndOf="@+id/lugar_inicio"
                android:text="..-->.. "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/lugar_destino"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/motivo_solicitudd"
                android:layout_marginTop="-1dp"
                android:layout_toEndOf="@+id/flecha"
                android:text="La Molina"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorBlack" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>