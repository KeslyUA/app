<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/plomo"
        tools:context=".Fragment.homeFragment">


        <LinearLayout
            android:id="@+id/inicio"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/fondo2"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="150dp"
                android:text="La mejor opcion para tus viajes"
                android:textColor="@color/colorWhite"
                android:textSize="21sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/inicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inicio">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bolditalic"
                android:text="Nuestra Flota"
                android:textColor="@color/colortitulo"
                android:textSize="24dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/roboto_bolditalic"
                android:text="Transporte Personal"
                android:textColor="#fff"
                android:textSize="24dp"

                />


        </LinearLayout>

        <TextView
            android:id="@+id/descripciontitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Contamos con una variedadde unidades
acorde a las necesidades de los clientes"
            android:textColor="#fff"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/inicio"
            app:layout_constraintStart_toStartOf="@+id/inicio"
            app:layout_constraintTop_toBottomOf="@+id/titulo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descripciontitulo">


            <androidx.cardview.widget.CardView
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="@id/titulo"
                app:layout_constraintStart_toStartOf="@id/titulo"
                app:layout_constraintTop_toBottomOf="@id/descripciontitulo">

                <LinearLayout
                    android:id="@+id/btn_sesrviciopersonal1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/camionetas"
                    android:orientation="vertical" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="@id/item1"
                app:layout_constraintStart_toStartOf="@id/item1"
                app:layout_constraintTop_toBottomOf="@id/item1">

                <LinearLayout
                    android:id="@+id/btn_sesrviciopersonal2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/camionetas2"
                    android:orientation="vertical" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/titulo2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bolditalic"
                    android:text="Nuestra Flota"
                    android:textColor="@color/colortitulo"
                    android:textSize="24dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/roboto_bolditalic"
                    android:text="Transporte Carga"
                    android:textColor="#fff"
                    android:textSize="24dp"

                    />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titulo2">

                <LinearLayout
                    android:id="@+id/btn_sesrviciocarga"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/camionetas3"
                    android:orientation="vertical" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>