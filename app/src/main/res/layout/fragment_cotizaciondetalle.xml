<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/plomo"
        android:orientation="vertical"
        tools:context=".FragmentDetalle.CotizaciondetalleFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="@drawable/cardview"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/contend_descripcionservico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nombre_camioneta_d_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="-4dp"
                        android:fontFamily="@font/roboto_bolditalic"
                        android:text="Toyota 4x4 "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/c_tipo_servico_solicitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombre_camioneta_d_c"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-1dp"
                        android:text="Transporte de Personal" />


                    <ImageView
                        android:id="@+id/imagenToyota"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_below="@+id/nombre_camioneta_d_c"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/toyotahilux4x4" />

                    <TextView
                        android:id="@+id/numero_solicitud_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-4dp"
                        android:layout_marginEnd="2dp"
                        android:text="N0012"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/x_numero_solicitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="-4dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toStartOf="@+id/numero_solicitud_c"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Solicitud"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@color/colorBlack" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="-4dp"
                        android:layout_toStartOf="@+id/x_numero_solicitud"
                        android:src="@drawable/ic_solicitud" />

                    <TextView
                        android:id="@+id/c_numero_asientos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/c_tipo_servico_solicitud"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/imagenToyota"
                        android:text="3 Pasajeros"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/c_color_camioneta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/c_numero_asientos"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/imagenToyota"
                        android:text="Negro"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/nombre_motivo_solicitudd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imagenToyota"
                        android:text="DescripciÃ³n"
                        android:fontFamily="@font/roboto_bolditalic"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/c_motivo_solicitudd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombre_motivo_solicitudd"
                        android:text="motivosjisidn"/>

                    <LinearLayout
                        android:id="@+id/xp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/c_motivo_solicitudd"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/c_lugar_inicio"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/motivo_solicitudd"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dp"
                            android:text="Los Olivos"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/flecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/motivo_solicitudd"
                            android:layout_marginStart="-1dp"
                            android:layout_toEndOf="@+id/lugar_inicio"
                            android:text="..-->.. "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/c_lugar_destino"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/motivo_solicitudd"
                            android:layout_marginTop="-1dp"
                            android:layout_toEndOf="@+id/flecha"
                            android:text="La Molina"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorBlack" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/c_fecha_inicio_solicitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/xp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="-1dp"
                        android:text="2022-45-87"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/c_fecha_fin_solicitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/xp"
                        android:layout_marginStart="186dp"
                        android:layout_marginTop="3dp"
                        android:layout_toEndOf="@+id/fecha_inicio_solicitud"
                        android:text="2022-45-87"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="italic" />

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/raya1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/contend_descripcionservico"
                android:background="@color/plomo"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/contend_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/raya1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nombrecantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Cantidad"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/c_costo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="13dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="3.650"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorBlack" />


                    <TextView
                        android:id="@+id/c_nombreigv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombrecantidad"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginBottom="5dp"
                        android:text="NO INCLUYE  IGV" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/raya2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/contend_precio"
                android:background="@color/plomo"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/contend_incluye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contend_precio"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nombreincluye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/roboto_bolditalic"
                        android:text="Incluye"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@color/colorPrimary" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/c_recycler_paquete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombreincluye" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout

                android:id="@+id/raya3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/contend_incluye"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:background="@color/plomo"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/contend_horario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/raya3"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagenflecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_flecha" />

                    <TextView
                        android:id="@+id/nombrehorario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imagenflecha"
                        android:fontFamily="@font/roboto_bolditalic"
                        android:text="Horarios"
                        android:textAppearance="?android:attr/textAppearance" />

                    <ImageView
                        android:id="@+id/img_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombrehorario"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_item" />

                    <TextView
                        android:id="@+id/c_descripcionHorario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombrehorario"
                        android:layout_alignLeft="@+id/img_item1"
                        android:layout_marginStart="24dp"
                        android:layout_toEndOf="@+id/img_item1"
                        android:text="@string/descripcionHorario1" />


                    <ImageView
                        android:id="@+id/img_item2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_item1"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="29dp"
                        android:src="@drawable/ic_item" />

                    <TextView
                        android:id="@+id/c_descripcionHorario2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/c_descripcionHorario"
                        android:layout_alignLeft="@+id/img_item2"
                        android:layout_marginStart="24dp"
                        android:layout_toEndOf="@+id/img_item1"
                        android:text="@string/descripcionHorario2" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="@drawable/cardview"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/contend_condiciones_alquiler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nombre_condicionesdealquiler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="-4dp"
                        android:fontFamily="@font/roboto_bolditalic"
                        android:text="Condiciones de Alquiler "
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@color/colorBlack" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/c_recycler_condicionesAlquiler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombre_condicionesdealquiler" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/raya4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/contend_condiciones_alquiler"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:background="@color/plomo"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/contend_finalizarservico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/raya4"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_info_24" />

                    <TextView
                        android:id="@+id/nombre_finalizarservice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@+id/img_info"
                        android:fontFamily="@font/roboto_bolditalic"
                        android:text="Importante"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@color/colorGreen" />

                    <TextView
                        android:id="@+id/text_finalizarservice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombre_finalizarservice"
                        android:layout_marginStart="@dimen/item_vertical_margin"
                        android:layout_marginTop="2dp"
                        android:text="@string/textoFinalizarServicio" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/contend_finalizarservico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button

                    android:id="@+id/c_btn_aceptar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_aceptar"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</ScrollView>